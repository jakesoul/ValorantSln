@model Map

<div class="card card-outline-primary m-1 p-1">
    <div class="row">

        <div class="col-2">
            <div class="bg-faded p-1" style="display: flex; justify-content: flex-start;">
                <h3 style="margin-left: 10px;">
                    <!-- Add margin-left for spacing if needed -->
                    @Model.MapName
                </h3>
            </div>

            <h5>Location</h5>
                <div class="card-text p-1">@Model.MapLocation</div>

            <p></p>
        </div>

        <div class="col-5" style="float:right">
            <img src="~/Images/Maps/MapImages/@Model.MapImage" style="width: 197px; height: 300px; float:right" />
        </div>

        <div class="col-5" style="float:right">
            <img src="~/Images/Maps/Minimaps/@Model.MinimapImage" style="width: 197px; height: 300px; float:right" />
        </div>

    </div>
</div>