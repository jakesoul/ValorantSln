@model IEnumerable<string>

<div class="d-grid gap-2">

    <a class="btn btn-outline-secondary" asp-action="MapList" asp-controller="Map" asp-route-mapName="">
        All Maps
    </a>

    @foreach (string mapName in Model ?? Enumerable.Empty<string>())
    {
        <a class="btn @(mapName == ViewBag.SelectedMapName ? "btn-danger": "btn-outline-secondary")"
            asp-action="MapList" asp-controller="Map"
           asp-route-mapName="@mapName"
            asp-route-mapPage="1">
            @mapName
        </a>
    }

</div>