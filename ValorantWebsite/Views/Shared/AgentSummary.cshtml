@model Agent

<div class="card card-outline-primary m-1 p-1">
    <div class="row">

        <div class="col-6">
            <div class="bg-faded p-1" style="display: flex; justify-content: flex-start;">
                <span>
                    <span class="badge rounded-pill bg-danger text-white">
                        No. @Model.AgentID
                    </span>
                </span>
                <h3 style="margin-left: 10px;">
                    <!-- Add margin-left for spacing if needed -->
                    @Model.Name
                </h3>
            </div>

            <h5>Role</h5>
                <div class="card-text p-1">@Model.Role</div>

            <h5>Biography</h5>
                <div class="card-text p-1">@Model.Biography</div>

            <p></p>

            <h5>Special Abilities</h5>
                <div class="card-text p-1">Q - @Model.Q_Ability, E - @Model.E_Ability, C - @Model.C_Ability, X - @Model.X_Ability</div>
        </div>

        <div class ="col-2">
            <!-- space between text and image -->
        </div>

        <div class="col-4" style="float:right">
            <img src="~/Images/AgentIcons/@Model.AgentImage" style="width: 197px; height: 300px; float:right" />
        </div>

    </div>
</div>